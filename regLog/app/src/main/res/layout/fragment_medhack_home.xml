
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".fragments.MedHackHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:padding="5dp"
            android:elevation="@dimen/fab_margin"
            android:id="@+id/container">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/mecbhachkc"
                        android:id="@+id/thumbnail"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="5dp">


                    <TextView
                        android:id="@+id/gads_name"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Welcome to MedHack 2020"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#000000"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginEnd="3dp"
                            android:text="Hosted with the Johns Hopkins Schools of Medicine.To enjoy full access to the hospital ?"
                            android:id="@+id/ln_hours"/>


                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/reg_button"
                        android:layout_gravity="end"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/reg_login"
                        android:cropToPadding="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Register here"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/container"
           android:orientation="vertical">

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"

               android:padding="5dp"
               android:elevation="@dimen/fab_margin"
               android:id="@+id/containera">

               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:orientation="vertical"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:src="@drawable/appoint" />


                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginTop="25dp"
                       android:layout_marginStart="5dp">


                       <TextView
                           android:textColor="#000000"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Welcome to MedHack 2020"
                           android:textStyle="bold"
                           android:textSize="18sp"/>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:orientation="horizontal"
                           android:layout_marginTop="10dp"
                           android:layout_height="wrap_content">

                           <TextView
                               android:textColor="#000000"

                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="15sp"
                               android:layout_marginEnd="3dp"
                               android:text="Don't want to register you can then book appointment in the nav drawer." />


                       </LinearLayout>



                   </LinearLayout>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

       </LinearLayout>



    </RelativeLayout>


</FrameLayout>

